<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:config="clr-namespace:MobileHymnal.Data.Config"
             x:Class="MobileHymnal.Screens.HymnView"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="textStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{x:Static config:ConfigEngine.FontSize}" />
                <Setter Property="TextColor" Value="{x:Static config:ConfigEngine.HymnTextColor}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView >
            <StackLayout x:Name="lyricView" HorizontalOptions="Fill"  BackgroundColor="{x:Static config:ConfigEngine.HymnBackgroundColor}" Padding="20">
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>